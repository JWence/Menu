<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="30dp">

                <ImageButton
                    android:id="@+id/btnComida"
                    android:layout_width="302dp"
                    android:layout_height="151dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_comida"
                    app:srcCompat="@drawable/food" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="302dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/estilo_text_view"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="Comida"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="30dp">

                <ImageButton
                    android:id="@+id/btnBebida"
                    android:layout_width="302dp"
                    android:layout_height="151dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_comida"
                    app:srcCompat="@drawable/drink" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="302dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/estilo_text_view"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="Bebida"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnPostre"
                    android:layout_width="302dp"
                    android:layout_height="151dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_comida"
                    app:srcCompat="@drawable/desert" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="302dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/estilo_text_view"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="Postres"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>